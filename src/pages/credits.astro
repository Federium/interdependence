---

import Contenuto from "../layouts/Contenuto.astro";
import credits from '../assets/data/credits.json';
import Heading from "../components/Heading.astro";

import {Image} from "astro:assets";

import logoDesktop from "../assets/logos/interdependence-white-long.svg";
import logoMobile from "../assets/logos/interdependence-white-short.svg";

import logoPolimi from '../assets/logos/Polimi.svg';
import logoPoliDesign from '../assets/logos/Poli.design.svg';
import logoDesignWeek from '../assets/logos/logo-design-week.svg';
---


<Contenuto name="Credits">
  <Heading title="" background={true} backgroundMobile={true}></Heading>
  <div class="logo-container desktop">
    <Image src={logoDesktop} alt="interdependence - exploring opposites" id="logo-interdependence"></Image>
  </div>
  <div class="logo-container mobile">
    <Image src={logoMobile} alt="interdependence - exploring opposites" id="logo-interdependence"></Image>
  </div>
  <main class="credits-page">
    <div class="credits-grid">
      <div class="credits-column">
        {credits.slice(0, Math.ceil(credits.length/4)).map((section) => (
          <div class="credits-section">
            <p class="section-title">{section.section}</p>
            <div class="people-list">
              {section.people.map((person) => (
                <p class="person">{person}</p>
              ))}
            </div>
          </div>
        ))}
      </div>
      <div class="credits-column">
        {credits.slice(Math.ceil(credits.length/4), Math.ceil(credits.length/4)*2).map((section) => (
          <div class="credits-section">
            <p class="section-title">{section.section}</p>
            <div class="people-list">
              {section.people.map((person) => (
                <p class="person">{person}</p>
              ))}
            </div>
          </div>
        ))}
      </div>
      <div class="credits-column">
        {credits.slice(Math.ceil(credits.length/4)*2, Math.ceil(credits.length/4)*3).map((section) => (
          <div class="credits-section">
            <p class="section-title">{section.section}</p>
            <div class="people-list">
              {section.people.map((person) => (
                <p class="person">{person}</p>
              ))}
            </div>
          </div>
        ))}
      </div>
      <div class="credits-column">
        {credits.slice(Math.ceil(credits.length/4)*3).map((section) => (
          <div class="credits-section">
            <p class="section-title">{section.section}</p>
            <div class="people-list">
              {section.people.map((person) => (
                <p class="person">{person}</p>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

<!-- LOGOS -->
<div class="logo-container-bottom" >
  <div class="logo-left">
    <Image src={logoPolimi} alt="Logo del Politecnico di Milano" id="logo-polimi"  />
    <Image src={logoPoliDesign} alt="Logo di Poli.design" id="logo-polidesign" />
  </div>
  <div class="logo-right">
    <Image src={logoDesignWeek} alt="Logo Milano Design Week" id="logo-mdw"/>
  </div>
</div>


  </main>
</Contenuto>







<style>

.logo-container {
            display: flex;
            &.desktop {
              mix-blend-mode: difference;

            }

            &.mobile {
            display: none;
        }

        img {
            width: 100%;

            mix-blend-mode: difference;
            align-self: left;
        }
        }
     
       

    .logo-container-bottom {
      mix-blend-mode: normal;

      width: 100%;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      div {
        display: flex;
        height: 10em;
        align-items: center;
        gap: 2em;
      }
      img {
        max-width: 200px;
        max-height: 80px;

      }

  
    }

  .credits-page {
    margin-top: 4rem;
    /* padding: clamp(2rem, 5vw, 5rem); */
    /* background-color: var(--bg-color); */
  }

  .credits-grid {
    display: flex;
    flex-direction: row;
    gap: clamp(2rem, 4vw, 4rem);
    max-width: 1400px;
    margin: 0 auto;
  }

  .credits-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .credits-section {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .section-title {
    font-family: 'Milligram';
    font-weight: bold;
    font-size: 1em;
    color: var(--text-color);
    margin: 0;
  }

  .people-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .person {
    font-family: 'Milligram Text';
    font-size: 1em;
    color: var(--text-color);
    margin: 0;
  }
  #logo-polimi {
    filter: invert(1);
  }

  @media (max-width: 768px) {
    .credits-page {
      margin-top: 1rem;
    }

    .credits-grid {
      flex-direction: column;
      gap: 1em;
    }

    .logo-container {
          padding: 0 !important;

          &.desktop {
              display: none;

            }

            &.mobile {
            margin-left: auto;
            margin-right: auto;
            display: block;
            filter: invert(1);
            max-width: 200px;
            margin-bottom: 3em;
            img {
              height: auto;
            }
        }
  }





  
  .logo-container-bottom {
          display: flex;
          justify-content: center;
          position: relative;
          width: 100%;
          padding: clamp(1rem, 2vw, 2rem);
          margin-top: 6rem;
          gap:2em;
          div {
            height: auto;
          }
        }
        
        .logo-left {
          display: flex;
          align-items: center;
          gap: clamp(1rem, 2vw, 2rem);
        }
        
        .logo-right {
          display: flex;
          align-items: center;
          justify-content: flex-end;
        }
        
        /* Shared styles for all logos */
        .logo-left img,
        .logo-right img {
          height: clamp(3rem, 4vw, 8rem); /* Responsive height using clamp */
          width: auto; /* Width will adjust based on aspect ratio */
          object-fit: contain;
          max-width: 100%; /* Prevent overflow */
        }

    #logo-interdependence {

    }

    #logo-mdw {
        }
        #logo-polimi {
          max-width: 250px;
        }
        #logo-polidesign {
          max-width: 180px;
        }
</style>