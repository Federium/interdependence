<script>
    document.addEventListener('DOMContentLoaded', () => {
    const themes = document.querySelectorAll('.theme');
    
    themes.forEach(theme => {
      theme.addEventListener('mouseenter', () => {
        const description = theme.querySelector('.theme-description');
        if (description) {
          (description as HTMLElement).style.height = `${description.scrollHeight}px`;
        }
      });
      
      theme.addEventListener('mouseleave', () => {
        const description = theme.querySelector('.theme-description');
        if (description) {
          (description as HTMLElement).style.height = '0';
        }
      });
    });
  });
</script>


