---
import '../style/global.css';
import Cursor from '../components/Cursor.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// import { ClientRouter } from "astro:transitions";

export interface Props {
  subsection?: boolean;
  title?: string;
  active?: string;
  subsectionActive?: number;
  headerBg?:boolean}

const { subsection = false, title = 'interdependence â€“ exploring opposites', active="0", subsectionActive = 0, headerBg=false  } = Astro.props as Props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-16" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:site_name" content="interdependence">
    <meta property="og:description" content="Politecnico di Milano x Milano Design Week 6-15 April 2025 ">
    <meta property="og:locale" content="en_EN">
    <meta property="og:image" content="https://www.interdependence.polimi.it/assets/og_image.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.interdependence.polimi.it/" />
  
  </head>
<body>

  <div class="content-wrapper">
    <slot />
    <Footer></Footer>
    <Header subsection={subsection} active={active} subsectionActive={subsectionActive} background={headerBg}></Header>
  </div>
  <Cursor></Cursor>



</body>
</html>

<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
