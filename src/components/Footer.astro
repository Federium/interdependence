---

import {Image} from 'astro:assets';
import logoPolimi from '../assets/logos/Polimi.svg';
import logoPoliDesign from '../assets/logos/Poli.design.svg';

---

<div class="footer-desktop">
    
  <div class="website-container">
    <div class="website-spacer credits"> Interdependence is the result of a team work, in the true spirit of the initiative. </div>
    <div class="website-spacer footer-text credits"> <a href="/credits">All credits.</a></div>
    <div class="website-spacer footer-text">&#169; 2025 Politecnico di Milano </div>
  </div>

  <div class="website-container website">
    <div class="website-spacer section">Website</div>

    <div class="footer-text">
      <a href="https://www.design.polimi.it/en" target="_blank">design.polimi</a>
    </div>
    <div class="footer-text">
      <a href="https://dipartimentodesign.polimi.it/en" target="_blank">dipartimentodesign.polimi</a>
    </div>
    <div class="footer-text">
      <a href="https://www.polidesign.net/en/" target="_blank">polidesign.net</a>
    </div>
    <div class="website-spacer footer-text">
      <a href="https://salonemilano.it/en/" target="_blank">Milano Design Week 2025</a>
    </div>
  </div>
  
  <div class="website-container social">
    <div class="section">Social</div>
    <!-- <div class="first" id="credits"><a href="">credits</a></div> -->
    <div class="footer-text">
      <a href="https://www.instagram.com/interdependence.polimi/" target="_blank">@interdependence.polimi</a>
    </div>
    <div class="footer-text">
      <a href="https://www.instagram.com/school.design.polimi/" target="_blank">@school.design.polimi</a>
    </div>
    <div class="footer-text">
      <a href="https://www.instagram.com/designxdesigners/" target="_blank">@designxdesigners </a>
    </div>
  </div>

  <div class="website-container poli">
    <div class="text-container section">from an idea by</div>
    <div class="logo-container">
      <Image src={logoPolimi} alt="Politecnico di Milano" class="img"></Image>
      <Image src={logoPoliDesign} alt="Poli.Design" class="img"></Image>
    </div>
  </div>
</div>



<style>
  .footer-desktop {
    position: relative;
    display: flex;
    width: 100%;
    padding: clamp(2rem, 4vh, 4rem) clamp(2rem, 5vw, 5rem) clamp(4rem, 8vh, 8rem);
    background-color: black;
    overflow-x: hidden;
    font-family: 'Milligram';
    z-index: 99 !important;
  }

  .website-container {
    width: 25%;
    font-family: "Milligram Text";
    display: flex;
    flex-direction: column;
    position: relative;
    color: white;
  }

  .section {
    font-family: 'milligram';
    font-weight: bold;
  }

  .credits {
    padding-right: clamp(1rem, 6vw, 6rem);
  }

  .website-spacer {
    position: relative;
    display: flex;
    width: auto;
    height: fit-content;
    text-align: left;
  }

  .text-container {
    width: fit-content;
    text-align: left;
  }

  .footer-text {
    margin-top: clamp(1rem, 2vh, 2rem);
    color: white !important;
  }

  .footer-text a {
    color: white !important;
    transition: opacity 0.3s ease;
  }

  .footer-text a:hover {
    opacity: 0.8;
  }

  .logo-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    gap: clamp(1rem, 2vw, 2rem);
    padding-top: clamp(1rem, 2vh, 2rem);
    align-items: center;
  }

  .img {
    width: 100%;
    min-width: 0;
    object-fit: contain;
    max-width: 150px;
    height: auto;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .footer-desktop {
      padding: 3vh 3rem 6vh;
      gap: 2rem;
    }

    .website-container {
      width: 50%;
    }

    .footer-desktop {
      flex-wrap: wrap;
    }

    .img {
      max-width: 120px;
    }

    .credits {
      padding-right: 2rem;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer-desktop {
      padding: 4vh 2rem 8vh;
      flex-direction: column;
      gap: 2rem;
    }

    .website-container {
      width: 100%;
      margin: 0;
    }

    .logo-container {
      gap: 1rem;
      align-items: flex-start;
    }

    .img {
      max-width: 100px;
    }
  }
</style>