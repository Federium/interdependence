---
// filepath: /Users/filippo/Documents/GitHub/interdependence/src/components/ProjectCard.astro
export interface Props {
  
    folder: string;
    projectId: string;
    title: string;
    slug: string;
  
}

const { folder, projectId, title, slug } = Astro.props as Props;
---



  <a href={`/fabbricadelvapore/catalogue/${folder}/${slug}`} class="card">
    <div class="overlay">
      <span>{title}</span>
    </div>
  </a>




<style>



    .card {
      position: relative;
      width: 300px;
      height: 300px;
      background: #ccc;
      overflow: hidden;
      cursor: pointer;
    }
  
    .card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  
    .card .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
    }
  
    .card:hover .overlay {
      opacity: 1;
    }
  </style>