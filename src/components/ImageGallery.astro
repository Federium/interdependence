---
import { Image } from 'astro:assets';
import Modal from './Modal.astro';

const { gallery } = Astro.props;


---
  

<div id="gallery" class="relative w-full bg-white z-25" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-100 overflow-hidden">
        
        {gallery.map((image,index) => (
             <a   id={`carousel-item-${index}`} class="hidden duration-700 ease-in-out" data-carousel-item data-index={index}>

             <Image 
            src={image} 
            alt=""
            class=" h-full w-full object-contain"
            
            />
            </a>
        
          ))}
    </div>
    <!-- Slider controls -->
    {gallery.length > 1 && (
  <>
    <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-2 cursor-pointer group  focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-radial from-white/30 to-transparent hover:from-white/90 hover:to-transparent    group-focus:outline-none">
            <svg class="w-4 h-4 text-white  rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="gray"  stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-2 cursor-pointer group  focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-radial from-white/30 to-transparent hover:from-white/90 hover:to-transparent    group-focus:outline-none">
            <svg class="w-4 h-4 text-white  rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="gray"  stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
    </>
)}
</div>

<!-- Modal --></div>


