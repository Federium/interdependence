---
import {Image} from 'astro:assets';
import Logos from './Logos.astro';

import logoMottola from '../assets/logos/mottola-black.svg';
import logoZetafonts from '../assets/logos/zetafonts-black.svg';
import logoNavigare from '../assets/logos/navigare.svg';
import logoComune from '../assets/logos/logo-comune-milano.svg';
import logoCampoTeatrale from '../assets/logos/campoteatrale.svg';
import logoTop1 from '../assets/logos/logo_poli_polidesign.svg';
import logoTop2 from '../assets/logos/Poli.design.svg';
---

<div class="logos-container">
  <!-- Top logos section -->
  <div class="logos-top">
    <div class="logo-group">
      <h4>From an idea by</h4>
      <div class="logo-row">
        <div>        <Image src={logoTop1} alt="Politecnico di Milano" id="logoTop1" />        </div>
         </div>
      </div>
    </div>
  </div>

  <!-- Bottom section with left and right columns -->
 <Logos></Logos>
</div>

<style>
  /* Container for all logo sections */
  .logos-container {
    display: flex;
    flex-direction: column;
    gap: 6rem;
    margin: 6rem 0 0 0;
  }

  /* Top logos section */
  .logos-top {
    width: 100%;
    display: flex;
    justify-content: left;
    margin-bottom: 2rem;
  }

  .logos-top .logo-row {
    justify-content: left;
    gap: 4rem;
  }

  .logos-top .logo-group h4 {
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Top logos specific sizes */


  /* Existing logos section styles */
  .logos-section {
    display: flex;
    width: 100%;
    gap: 4rem;
    padding: 2rem 0;
    margin: 0;
  }

  /* Left and right columns */
  .logos-left,
  .logos-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .logo-group h4 {
    text-align: left;
    margin: 0;
    white-space: nowrap;
  }

  .logos-right {
    justify-content: space-between;
  }

  /* Right logos container */
  .right-logos-container {
    display: flex;
    gap: 4rem;
    height: 100%;
    justify-content: flex-end;
  }

  /* Logo group container */
  .logo-group {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    gap: 2rem;
  }

  /* Logo group header */
  .logos-top .logo-group h4 {
    text-align: left;
    margin: 0;
  }

  /* Logo row container */
  .logo-row {
    display: flex;
    align-items: flex-end; /* Aligns logos to bottom */
    gap: 2rem;
    flex-wrap: wrap;
  }

  .logo-row div {
    display: flex;
    align-items: center;
    height: 100%;
  }

  /* Base logo styles - group all common properties */
  .logo-row img,
  #logoTop1
   {
    width: auto;
    height: max(7vw,80px); /* Base height for all logos */
    align-items: center;
    display: flex;
  }

 



  /* Mobile adjustments */
  @media (max-width: 768px) {
    .logos-container {
      gap: 4rem;
      margin: 18rem 0 3rem 0;
    }


    .logos-top .logo-row {
      gap: 3rem;
    }

    .logos-section {
      flex-direction: column;
      gap: 3rem;
      margin: 0rem 0 3rem 0;
    }

    .right-logos-container {
      justify-content: flex-start;
      gap: 2rem;
    }

    /* Standardize mobile sizes */


    #logoNavigare,
    #logoZetafonts {
      height: 24px;
    }

    .logo-group h4 {
      font-size: 0.9em;
      white-space: nowrap;
    }
  }
</style>